<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Setting"
            app:titleCentered="true"
            app:navigationIcon="@drawable/back"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/image_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/pic_upload"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cover setting"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cover_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_single_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单图"
                    android:checkable="true"

                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_no_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无封面"
                    android:checkable="true"
                    android:checked="true"
                    android:clickable="true"/>

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select your tech labels"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tech_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/java_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="java"
                    android:checkable="true"

                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/net_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:checkable="true"
                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/C_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:checkable="true"
                    android:clickable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/python_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="python"
                    android:checkable="true"
                    android:clickable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/fastapi_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fastapi"
                    android:checkable="true"
                    android:clickable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/flask_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flask"
                    android:checkable="true"
                    android:clickable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/dash_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dash"
                    android:checkable="true"
                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/javascript_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="javascript"
                    android:checkable="true"
                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/vue_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vue"
                    android:checkable="true"
                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/sql_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sql"
                    android:checkable="true"
                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/nlp_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nlp"
                    android:checkable="true"
                    android:clickable="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/machine_learning_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="machine learning"
                    android:checkable="true"
                    android:clickable="true"/>

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Submit"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>